<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/mp3_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mp3_layout_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索" />

        <Button
            android:id="@+id/mp3_layout_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始" />

        <Button
            android:id="@+id/mp3_layout_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停" />
    </LinearLayout>
    <SeekBar android:layout_above="@id/mp3_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mp3_seekbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        
        />
	<ListView android:layout_above="@id/mp3_seekbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/mp3_listview"></ListView>
    
</RelativeLayout>