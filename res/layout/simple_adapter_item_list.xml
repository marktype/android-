<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView android:id="@+id/simple_adapter_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        
        android:src="@drawable/ic_label_deal_second"/>

    <TextView 
        android:id="@+id/simple_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simple_adapter_img"
        android:text="爱喝酒"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"/>
    <TextView 
        android:id="@+id/simple_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simple_adapter_img"
        android:text="顶级的烦恼个基点"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/simple_title_txt"/>
</RelativeLayout>
