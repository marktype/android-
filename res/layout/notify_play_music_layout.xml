<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >
    <ImageView 
        android:id="@+id/notify_music_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_appwidget_album_cover_normal_4x1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView 
        android:id="@+id/notify_music_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放歌曲"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/notify_music_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/music_play_layout"
        android:layout_below="@id/notify_music_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notify_music_img"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/music_pre_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            
            android:src="@drawable/button_previous_selector" />

        <ImageView
            android:id="@+id/music_play_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/button_play_selector" />

        <ImageView
            android:id="@+id/music_next_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/button_next_selector" />

       
    </LinearLayout>
</RelativeLayout>
